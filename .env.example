# ==============================================================================
# VAGENT CONFIGURATION
# ==============================================================================
# Copy this file to .env and customize as needed.


# ------------------------------------------------------------------------------
# LIVEKIT CONNECTION
# ------------------------------------------------------------------------------
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret


# ------------------------------------------------------------------------------
# LLM BACKEND (Ollama)
# ------------------------------------------------------------------------------
OLLAMA_BASE_URL=http://localhost:11434/v1


# ------------------------------------------------------------------------------
# AGENT BEHAVIOR
# ------------------------------------------------------------------------------
VAGENT_MIN_ENDPOINTING_DELAY=0.1


# ------------------------------------------------------------------------------
# STT (Speech-to-Text) ENGINE
# ------------------------------------------------------------------------------
# Options: "whisper" (default), "cartesia", "whisperlivekit"
VAGENT_STT_ENGINE=whisper

# --- Whisper STT (default, local) ---
VAGENT_STT_BEAM_SIZE=1
VAGENT_STT_VAD_FILTER=1
VAGENT_STT_WITHOUT_TIMESTAMPS=1

# --- WhisperLiveKit STT ---
# Server: python -m whisperlivekit.basic_server --model-size base --pcm-input
VAGENT_WHISPERLIVEKIT_URL=ws://localhost:8000/asr
VAGENT_WHISPERLIVEKIT_LANGUAGE=auto
VAGENT_WHISPERLIVEKIT_SAMPLE_RATE=16000

# --- Cartesia STT (cloud, requires API key) ---
VAGENT_CARTESIA_STT_MODEL=ink-whisper
VAGENT_CARTESIA_STT_LANGUAGE=en
VAGENT_CARTESIA_STT_SAMPLE_RATE=16000
VAGENT_CARTESIA_STT_MIN_VOLUME=0.0
VAGENT_CARTESIA_STT_MAX_SILENCE_SECS=0.8


# ------------------------------------------------------------------------------
# TTS (Text-to-Speech) ENGINE
# ------------------------------------------------------------------------------
# Options: "kokoro" (default), "vibevoice", "cartesia"
VAGENT_TTS_ENGINE=kokoro

# --- Kokoro TTS (default, local) ---
VAGENT_KOKORO_URL=http://localhost:8880/v1
VAGENT_KOKORO_VOICE=af_heart

# --- VibeVoice TTS ---
# Server: python demo/vibevoice_realtime_demo.py --model_path microsoft/VibeVoice-Realtime-0.5B --port 3000
VAGENT_VIBEVOICE_URL=ws://localhost:3000
VAGENT_VIBEVOICE_VOICE=en-WHTest_man
VAGENT_VIBEVOICE_CFG=1.5
VAGENT_VIBEVOICE_STEPS=5

# --- Cartesia TTS (cloud, requires API key) ---
# NOTE: VAGENT_CARTESIA_VOICE_ID is required (UUID from Cartesia voice library)
VAGENT_CARTESIA_TTS_MODEL=sonic-3
VAGENT_CARTESIA_TTS_LANGUAGE=en
VAGENT_CARTESIA_TTS_SAMPLE_RATE=24000
VAGENT_CARTESIA_TTS_MAX_BUFFER_DELAY_MS=3000
VAGENT_CARTESIA_VOICE_ID=


# ------------------------------------------------------------------------------
# CARTESIA API (shared for STT & TTS)
# ------------------------------------------------------------------------------
# Required when using VAGENT_STT_ENGINE=cartesia or VAGENT_TTS_ENGINE=cartesia
VAGENT_CARTESIA_API_KEY=
VAGENT_CARTESIA_VERSION=2025-04-16


# ------------------------------------------------------------------------------
# DEBUG & LOGGING
# ------------------------------------------------------------------------------
# Enable latency tracking (1/true/yes/on to enable)
VAGENT_LATENCY=0

# Pretty-print latency output
VAGENT_LATENCY_PRETTY=0

# Latency output color (auto, always, never)
VAGENT_LATENCY_COLOR=auto

# Disable all colored output (standard NO_COLOR convention)
# NO_COLOR=1
